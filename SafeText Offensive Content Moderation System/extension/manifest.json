{
  "manifest_version": 3,
  "name": "SafeText Analyzer",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:8080/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Page"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}